{
  "dockerComposeFile": "../compose.yaml",
  "service": "paychecks",
  "workspaceFolder": "/paychecks/app",
  "postCreateCommand": "cd project && poetry shell",
  "shutdownAction": "stopCompose",
  "forwardPorts": [8501],
  "mounts": [
    {
      "source": "${localWorkspaceFolder}/.git/",
      "target": "${containerWorkspaceFolder}/.git/",
      "type": "bind"
    }
  ],
  "features": {
    "ghcr.io/devcontainers/features/comqmon-utils:2": {
      "installOhMyZsh": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ],
      "settings": {
        "ruff.enable": true,
        "ruff.lint.enable": true,
        "ruff.organizeImports": true,
        "launch": {
          "version": "0.2.0",
          "configurations": [
            {
              "name": "Python Debugger: Current File",
              "type": "debugpy",
              "request": "launch",
              "program": "${file}",
              "console": "integratedTerminal",
              "justMyCode": false
            }
          ],
          "compounds": []
        }
      }
    }
  }
}
