---
- name: Apt update and upgrade
  hosts: oci
  become: yes

  tasks:
    - name: update apt packages
      ansible.builtin.apt:
        update_cache: yes
    - name: upgrade apt packages
      ansible.builtin.apt:
        autoremove: yes
        upgrade: full
    - name: install packages
      ansible.builtin.apt:
        name:
          - vim
          - zsh
          - git
        state: latest
